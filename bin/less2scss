#!/usr/bin/env node

"use strict";
const commander = require('commander');
const version = require('../package.json').version;
const less2scss = require('../index.js');

commander
    .version(version)
    .description('This utility quickly converts all your less files to scss.')
    .option('-s, --src <sourcePaths>', 'src')
    .option('-d, --dst <dstPath>', 'dst')
    .parse(process.argv);

const exec = () => {
    if (commander.src){

        const src = commander.src,
            dst = commander.dst || commander.src;

        less2scss(src, dst);

    }
    else {
        commander.outputHelp();
    }
};

exec();
